<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block template="Magento_Theme::handless.phtml"/>
        </referenceContainer>
        <referenceBlock name="catalog.topnav">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="my-custom-contact-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Contact</argument>
                    <argument name="path" xsi:type="string">contact</argument>
                    <argument name="sortOrder" xsi:type="number">110</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="footer-container">
            <block class="Magento\Theme\Block\Html\Footer" name="footer" template="html/footer.phtml"/>
        </referenceContainer>
    </body>
</page>
